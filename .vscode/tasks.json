{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run tests (pytest)",
      "type": "shell",
      "command": "${workspaceFolder}/.venv/bin/python -m pytest -q",
      "group": "test",
      "presentation": {
        "reveal": "always"
      }
    },
    {
      "label": "Run linter (flake8)",
      "type": "shell",
      "command": "${workspaceFolder}/.venv/bin/python -m flake8 .",
      "group": "build",
      "presentation": {
        "reveal": "always"
      }
    }
  ]
}
