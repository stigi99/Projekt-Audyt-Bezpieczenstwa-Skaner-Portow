{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Debug All Tests (pytest)",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/.venv/bin/pytest",
      "args": ["-q"],
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Python: Debug Current Test File (pytest)",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/.venv/bin/pytest",
      "args": ["-q", "${file}"],
      "console": "integratedTerminal",
      "justMyCode": true
    }
  ]
}
